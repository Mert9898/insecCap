import sqlite3

# Create a new database and a table for virus signatures
def create_virus_db():
    conn = sqlite3.connect('virus_definitions.db')
    cursor = conn.cursor()
    cursor.execute('CREATE TABLE IF NOT EXISTS signatures (hash TEXT PRIMARY KEY)')
    # Insert some dummy signatures for demonstration
    signatures = ['d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2d2', 
                   'e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3e3']
    cursor.executemany('INSERT OR IGNORE INTO signatures (hash) VALUES (?)', [(sig,) for sig in signatures])
    conn.commit()
    conn.close()

create_virus_db()
